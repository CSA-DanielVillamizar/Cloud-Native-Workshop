name: Destroy AKS Cluster V2
on:
  workflow_call:
    inputs:
      clusterName:
        required: true
        type: string
      rgName:
        required: true
        type: string
    secrets:
      azureCredentials:
        required: true

jobs:
  delete-cluster:
    runs-on: ubuntu-latest
    steps:

    - uses: actions/checkout@main

    - name: Azure Login
      uses: azure/login@v1
      with:
        creds: ${{ secrets.azureCredentials }}
    
    - name: Destroy AKS Cluster with AZ CLI
      uses: Azure/cli@v1
      with:
        inlineScript: |
          az aks delete --name ${{ inputs.clusterName }} --resource-group ${{ inputs.rgName }} --yes
